// go row by row
// left to right, then right to left, then left to right ...
// theta(r*c)

void printsnake( int mat[r][c])
{
  for(int i=0;i<r;i++)
  {
    if(i%2==0)
    {
      for(int i=0;j<c;j++)
        System.out.printf(mat[i][j]+" "); // rows - 0,2,4,6...
    }
    else
    {
      for(int j=c-1;j>=0;j--)
      {
        System.out.println(mat[i][j]+" "); // rows - 1,3,5,7...
      }
    }
  }
}
